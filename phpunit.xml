<phpunit bootstrap="vendor/autoload.php">
    <filter>
        <whitelist processUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">./src/</directory>
        </whitelist>
    </filter>
    <testsuites>
        <testsuite name="Payloads">
            <file>tests/URITest.php</file>
            <file>tests/HeadersTest.php</file>
        </testsuite>
        <testsuite name="Base">
            <file>tests/ConfigurationTest.php</file>
            <file>tests/RestTest.php</file>
        </testsuite>
        <testsuite name="Modules">
            <file>tests/DecodersTest.php</file>
        </testsuite>
        <testsuite name="headers">
            <file>tests/HeadersTest.php</file>
        </testsuite>
    </testsuites>
</phpunit>